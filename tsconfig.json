{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": [
      "node",
      "hardhat",
      "@nomicfoundation/hardhat-ethers"
    ]
  },
  "include": [
    "hardhat.config.ts",
    "scripts",
    "test",
    "typechain-types"
  ]
}
